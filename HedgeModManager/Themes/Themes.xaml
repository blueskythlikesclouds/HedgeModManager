<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HedgeModManager.Themes">

    <local:ThemeList x:Key="Themes">
        <local:ThemeEntry FileName="DarkTheme" Name="Dark" IsDarkTheme="true"/>
        <local:ThemeEntry FileName="DarkerTheme" Name="Darker" IsDarkTheme="true"/>
        <local:ThemeEntry FileName="OLEDTheme" Name="OLED" IsDarkTheme="true"/>
        <local:ThemeEntry FileName="LightTheme" Name="Light"/>
        <local:ThemeEntry FileName="MicaDarkTheme" Name="Mica Dark" UsesMica="true" IsDarkTheme="true"/>
        <local:ThemeEntry FileName="MicaLightTheme" Name="Mica Light" UsesMica="true"/>
    </local:ThemeList>

</ResourceDictionary>